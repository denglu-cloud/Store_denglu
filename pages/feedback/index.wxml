<!-- 绑定点击事件，handleTabsItemChange名称：为handle+子类的监听方法名称 -->
<Tabs tabs="{{tabs}}"  bindtabsItemChange="handleTabsItemChange">
    <view class="fb_main">
        <view class="fb_title">问题种类</view>
        <view class="fb_tips">
            <text >功能建议</text>
            <text >购买遇到问题</text>
            <text >性能问题</text>
            <text >其它</text>
              
        </view>

        <view class="fb_content">
            <textarea placeholder="请描述一下您的问题"></textarea>
            <view class="tb_tool">
                <button bindtap="handleChooseImg">+</button>
                <!-- 注意，简单的数组拼接在微信小程序中key要写*this -->
                <view class="up_img_item"
                    wx:for="{{chooseImgs}}"
                    wx:key="*this"
                >
                     <UpImg src="{{item}}"></UpImg> 
                </view>
            </view>
        </view>

        <view class="form_btn_wrap">
            
            <button type="warn" color="white">
               
                <icon type="success_no_circle" size="23" color="white">
                </icon>
                提交
            </button>
        </view>

    </view>
</Tabs>   