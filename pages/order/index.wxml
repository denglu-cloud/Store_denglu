<!-- 绑定点击事件，handleTabsItemChange名称：为handle+子类的监听方法名称 -->
<Tabs tabs="{{tabs}}"  bindtabsItemChange="handleTabsItemChange"></Tabs>   

<view class="order_main">
    <view class="order_item"
        
    >
    <!-- wx:for="{{orders}}"
        wx:key="order_id" -->

        <view class="order_no_row">
            <view class="order_no_text">订单编号</view>
            <view class="order_no_value">{{orders.order_number}}</view>
        </view>

        <view class="order_price_row">
            <view class="order_price_text">订单价格</view>
            <view class="order_price_value">￥{{orders.order_price}}</view>
        </view>

        <view class="order_time_row">
            <view class="order_time_text">订单日期</view>
            <view class="order_time_value">{{orders.create_time}}</view>
        </view>

    </view>
</view>